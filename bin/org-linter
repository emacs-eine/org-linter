;;; Commentary:
;;
;; The command-line interface.
;;

;;; Code:

(require 'org-linter)
(require 'commander)

(defun org-linter--set-no-color ()
  "Set option to no color."
  (setq ansi-inhibit-ansi t))

(defun org-linter--run (&rest args)
  "The program entry."
  (apply #'org-linter-run args))

(commander
 (name "org-linter")
 (description "Run org-lint on Org files")
 (default org-linter--run)
 (option "--help, -h" "Show usage information and exit" commander-print-usage-and-exit)

 (option "--no-color"
         org-linter--set-no-color))

;;; org-linter ends here
